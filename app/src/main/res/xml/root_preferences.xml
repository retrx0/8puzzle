<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Settings">

    </PreferenceCategory>
    <PreferenceCategory
        android:visibility="visible"
        app:title="@string/display_header">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="auto_dark_mode"
            android:title="Auto Dark Mode" />
        <SwitchPreferenceCompat
            android:id="@+id/darkModeSwitchPref"
            app:key="dm"
            app:title="Dark Mode" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/other_header">

        <ListPreference
            android:defaultValue="true"
            android:entries="@array/list_items"
            android:entryValues="@array/list_items"
            android:icon="@drawable/ic_baseline_grid_on_24"
            android:key="grid_size"
            android:title="Grid Size" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_2"
            android:title="Display Time" />

    </PreferenceCategory>

</PreferenceScreen>